{
  "compileOnSave": true,
  "compilerOptions": {
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "strict": true,
    "noUnusedLocals": false,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "pretty": true,
    "sourceMap": true,
    "target": "ES2019",
    "baseUrl": "./",
    "outDir": "./dist",
    "rootDir": "./src",
    "typeRoots": [],
    "skipLibCheck": true,
    "declaration": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "types"
  ],
  "plugins": [
    {
      "name": "typescript-tslint-plugin"
    }
  ],
  "typedocOptions": {
      "out": "docs",
      "excludeExternals": true,
  }
}